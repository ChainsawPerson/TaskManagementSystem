<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.taskmansys.Controller">
   <children>
      <BarChart prefHeight="172.0" prefWidth="1280.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
        <xAxis>
          <CategoryAxis side="BOTTOM" />
        </xAxis>
        <yAxis>
          <NumberAxis side="LEFT" />
        </yAxis>
      </BarChart>
      <Pane layoutX="13.0" layoutY="222.0">
         <children>
            <Button layoutX="1.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="97.0" text="Total Tasks" fx:id="totalTasksButton" />
            <Button layoutX="108.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="124.0" text="Categories" />
            <Button layoutX="245.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="113.0" text="Priorities" />
            <Button layoutX="371.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="113.0" text="Reminders" />
            <TextField layoutX="1104.0" promptText="Search" />
            <MenuButton fx:id="createButton" layoutX="1184.0" layoutY="446.0" mnemonicParsing="false" text="Create:">
              <items>
                <MenuItem mnemonicParsing="false" text="Action 1" />
                <MenuItem mnemonicParsing="false" text="Action 2" />
              </items>
            </MenuButton>
            <Pane layoutY="25.0" fx:id="taskPane">
               <children>
                  <ScrollPane>
                     <content>
                        <TableView prefHeight="419.0" prefWidth="1255.0" fx:id="taskTableView">
                          <columns>
                            <TableColumn prefWidth="182.0" text="Name" fx:id="nameColumn" />
                            <TableColumn prefWidth="436.0" text="Description" fx:id="descriptionColumn" />
                            <TableColumn minWidth="7.0" prefWidth="182.0" text="Category" fx:id="categoryColumn" />
                            <TableColumn prefWidth="100.0" text="Status" fx:id="statusColumn" />
                            <TableColumn prefWidth="170.0" text="Priority" fx:id="priorityColumn" />
                            <TableColumn prefWidth="178.0" text="Deadline" fx:id="deadlineColumn" />
                          </columns>
                        </TableView>
                     </content>
                  </ScrollPane>
               </children>
            </Pane>
         </children>
      </Pane>
   </children>
</AnchorPane>
